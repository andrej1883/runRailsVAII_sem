<%= form_with(model: article) do |form| %>
  <% if article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
        <% article.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>



  <div class="card">
    <div class="card-header">
      <h2>Edit: <%= @article.header %></h2>
    </div>
    <div class="card-body">
      <h5 class="card-title">Edit your article: </h5>

      <p></p>
      <div class="field form-group">
        <%= form.label "Post image: " %>
        <%= form.file_field :avatar, class: "form-control" %>
      </div>
      <p></p>

      <div class="field form-group">
        <%= form.label :header %> :
        <%= form.text_field :header, class: "form-control", placeholder: "Article header", autofocus: true, :required => true %>
      </div>

      <p></p>
      <div class="field form-group">
        <%= form.label :article %> :
        <p></p>
        <%= form.rich_text_area :article, class: "form-control", placeholder: "Type your article here", autofocus: true, :required => true %>
      </div>
      <p></p>
      <div class="actions">
        <%= form.submit 'Submit', class: 'btn btn-primary' %>
      </div>
<% end %>

</div>
</div>